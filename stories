        function openModal(storyId) {
            const story = stories[storyId - 1];
            document.getElementById('modalIcon').textContent = story.icon;
            document.getElementById('modalTitle').textContent = story.title;
            document.getElementById('modalDescription').textContent = story.description;
            document.getElementById('storyModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('storyModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function buyStory() {
            const title = document.getElementById('modalTitle').textContent;
            alert('๐ ุฑุงุฆุน! ุชู ุฅุถุงูุฉ ูุตุฉ "' + title + '" ุฅูู ุณูุฉ ุงูุชุณูู!\n\nุงูุณุนุฑ: 20 ุฌููู\n\nุดูุฑุงู ูู! ๐');
            closeModal();
        }

        // Close modal when clicking outside
        document.getElementById('storyModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });
    </script>
</body>
</html>
